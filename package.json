  "license": "MIT",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "scripts": {
    "start": "cross-env EXPO_TV=1 expo start",
    "android": "cross-env EXPO_TV=1 expo run:android",
    "ios": "cross-env EXPO_TV=1 expo run:ios",
    "web": "expo start --web",
    "lint": "expo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx}\"",
    "prebuild": "cross-env EXPO_TV=1 expo prebuild --clean",
    "android:release": "cd android && gradlew assembleRelease",
    "deploy": "npx expo export -p web && npx eas-cli@latest deploy"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.2",
    "@react-navigation/drawer": "^7.5.6",
