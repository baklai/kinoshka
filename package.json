    "@react-native-tvos/config-tv": "^0.1.1",
    "@types/react": "~19.0.10",
    "cross-env": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-config-expo": "^9.2.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3"
  },
  "expo": {
    "install": {
      "exclude": [
        "react-native"
      ]
    }
  }
